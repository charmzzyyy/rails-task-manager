<h1>My Tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li>
  <input type="checkbox" name="<%= task.title %>" <%= task.completed ? "checked" : '' %>>
  <%= link_to task_path(task) do %>
        <%= task.title %>
      <% end %>
      <%= link_to 'Delete', task_path(task), method: :delete %>
<% end %>
</ul>

<hr>

<%= link_to "Add a new task",new_task_path  %>
